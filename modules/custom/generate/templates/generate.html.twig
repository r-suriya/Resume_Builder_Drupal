{{ attach_library('generate/generate-style') }}
{{ attach_library('generate/fontawesome') }}

{% block content %}

  <div class="resume">
    <div class="header">
      <h3>{{ details.name }}</h3>
      <h4>{{ details.profession }}</h4>
    </div>
    <div class="page">
      <div class="left-section">
        <div class="section">
          <h2>My Contact</h2>
          <div class="section-content">
            <ul>
              <li><i class="fas fa-envelope"></i> {{ details.email }}</li>
              <li><i class="fas fa-phone"></i> {{ details.phoneNo }}</li>
              <li><i class="fas fa-map-marker-alt"></i> {{ details.address }}</li>
              <li><i class="fas fa-globe"></i> {{ details.website }}</li>
            </ul>
          </div>
        </div>

        <div class="section">
          <h2>Skills</h2>
          <div class="section-content">
            <ul>
              <!-- Skills details -->
              {% for skill in details.skills|split(',') %}
                <li>{{ skill|trim }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>

        <div class="section">
          <h2>Educational Background</h2>
          <div class="section-content">
            
            <div class="timeline">
              <div class="timeline-item">
                <div class="timeline-date">{{ details.high_school_pyear }}</div>
                <div class="timeline-content">
                  <h3>{{ details.high_school_name }}</h3>
                  <h5> High School</h5>
                  <p>Mark scored: {{ details.high_school_marks }}</p>
                </div>
              </div>

              <div class="timeline-item">
                <div class="timeline-date">{{ details.higher_secondary_pyear }}</div>
                <div class="timeline-content">
                  <h3>{{ details.higher_secondary_sname }}</h3>
                  <h5>HigherSecondary</h5>
                  <p>Mark scored: {{ details.higher_secondary_marks }}</p>
                </div>
              </div>

              <div class="timeline-item">
                <div class="timeline-date">{{ details.graduation_passing_year }}</div>
                <div class="timeline-content">
                  <h3>{{ details.graduation_college_name }}</h3>
                  <h5>Graduation</h5>
                  <p>CGPA: {{ details.graduation_cgpa }}</p>
                </div>
              </div>

              {% if details.post_graduation == 'yes' %}
                <div class="timeline-item">
                  <div class="timeline-date">{{ details.post_graduation_pyear }}</div>
                  <div class="timeline-content">
                    <h3>{{ details.post_graduation_cname }}</h3>
                    <h5>Post Graduation</h5>
                    <p>CGPA: {{ details.post_graduation_marks }}</p>
                  </div>
                </div>
              {% endif %}

              <!-- Add more timeline items for additional educational details -->
            </div>

          </div>
        </div>

      </div>

      <div class="right-section">
        <div class="section">
          <h2>About Me</h2>
          <div class="section-content">
            <!-- About Me content -->
          </div>
        </div>

        <div class="section">
          <h2>Achievements</h2>
          <div class="section-content">
            <ul>
              <!-- Achievements details -->
            </ul>
          </div>
        </div>

        
        <div class="section">
          <h2>Professional Experience</h2>
          <div class="section-content">
            <ul class="experience-list">
              <li>
                <h3>{{ details.cname }}</h3>
                <div class="experience-details">
                  <div class="experience-date">{{ details.cyear }}</div>
                  <div class="experience-role">{{ details.crole }}</div>
                  <p>{{ description1 }}</p>
                </div>
              </li>

              <!-- Add more list items for additional professional experience -->
            </ul>

            
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
